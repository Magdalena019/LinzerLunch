<section id="results" class="row">

  <div class="col-lg-12">
    <input id="search" autocomplete="off" value="">
  </div>

  <main class="col-lg-12">
    <div id="stats"></div>
    <div id="headings" class="hide">
      <h1 id="headline" class="text-center">Gefundene Lokale</h1>
      <h1 id="noResult" class="text-center hide">Leider kein passendes Restaurant gefunden!<br />Ähnliche Restaurants:</h1>
    </div>
    <div id="hits" class="row"></div>
  </main>

