<section id="chooseType" class="row">
  <div class="small"></div>
  <h3 class="offset-3 col-6">Jetzt das perfekte Lokal finden!</h3>
  <!--<h6 class="offset-4 col-lg-4 col-md-5">Schnell und einfach aus mehreren Lokalen wählen!</h6>-->

  <div id="iconSearch" class="col-lg-12">

    <div id="iconRestaurant" class="col-12 row">

      <div class="col-lg-3 col-md-3 col-sm-3 icon" id="resBG">
        <input type="radio" name="category" value="restaurant" id="restaurant"/>
        <label class="reslabel" for="restaurant">
          <span width="150px"></span>
          <h6 class="descriptionIcons" style="margin-top:5px;">Restaurant</h6>
        </label>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-3 icon" id="cafBG">
        <input type="radio" name="category" value="cafe" id="cafe"/>
        <label class="caflabel" for="cafe">
          <span width="150px"></span>
          <h6 class="descriptionIcons" style="margin-top:5px;">Café</h6>
        </label>
      </div>
      <div class="col-lg-3 col-md-3 col-sm-3 icon" id="barBG">
        <input type="radio" name="category" value="bar" id="bar"/>
        <label class="barlabel" for="bar">
          <span width="150px"></span>
          <h6 class="descriptionIcons" style="margin-top:5px;">Bar</h6>
        </label>
      </div>
      <div class="col-lg-3 col-md-3 col-sm-3 icon" id="allBGs">
        <input type="radio" name="category" value="" id="all"/>
        <label class="mix" for="all">
          <span width="150px"></span>
          <h6 class="descriptionIcons" style="margin-top:5px;">Alle</h6>
        </label>
      </div>
    </div>

    <div id="checkicons" class="col-12 row">
      <div class="col-lg-3 col-md-3 col-sm-3" id="wifiButtonThing">
        <input type="checkbox" name="info" value="wifi" class="input_class_checkbox"/>
        <label class="wifi icon" for="wifi">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="wifiDescription">WLAN</h6>
      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="nonSmokerButtonThing">
        <input class="input_class_checkbox_nosmoker" type="checkbox" name="info" value="nonSmoker"/>
        <label for="nonSmoker icon">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="nonSmokerDescription">Nichtraucher</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="smokerButtonThing">
        <input class="input_class_checkbox_smoker" type="checkbox" name="info" value="smoker"/>
        <label for="smoker icon">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="SmokerDescription">Raucher</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="veggieButtonThing">
        <input class="input_class_checkbox_veggie" type="checkbox" name="info" value="veggie"/>
        <label for="veggie icon">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="veggieDescription">Vegetarisch</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="veganButtonThing">
        <input class="input_class_checkbox_vegan" type="checkbox" name="info" value="vegan"/>
        <label for="vegan icon">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="veganDescription">Vegan</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="breakfastButtonThing">
        <input class="input_class_checkbox_breakfast" type="checkbox" name="info" value="breakfast"/>
        <label for="breakfast">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="breakfastDescription">Frühstück</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="glutenButtonThing">
        <input class="input_class_checkbox_glutenfree" type="checkbox" name="info" value="glutenFree"/>
        <label for="glutenFree">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="glutenDescription">Glutenfrei</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="deliveryButtonThing">
        <input class="input_class_checkbox_delivery" type="checkbox" name="info" value="delivery"/>
        <label for="delivery">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="deliveryDescription">Lieferservice</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="lunchButtonThing">
        <input class="input_class_checkbox_lunch" type="checkbox" name="info" value="lunch"/>
        <label for="lunch">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="lunchDescription">Mittagsmenü</h6>

      </div>
      <div class="col-lg-3 col-md-3 col-sm-3" id="gardenButtonThing">
        <input class="input_class_checkbox_garden" type="checkbox" name="info" value="garden"/>
        <label for="garden">
          <span width="150px"></span>
        </label>
        <h6 class="descriptionIcons" id="gardenDescription">Gastgarten</h6>

      </div>

      <div id="iconSearchGo" class="col-12 row">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" id="goButtonThing">
          <button id="goButton" class="buttons">
            <img id="iconGo" src="images/icons/goButton.png" width="150">
          </button>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" id="resetButtonThing">
          <button id="resetButton" class="buttons">
            <img id="iconReset" src="images/icons/resetButton.png" width="150">
          </button>
        </div>

      </div>
    </div>
  </div>

</section>
