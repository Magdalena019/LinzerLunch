<section id="results" class="row">

  <div class="col-lg-12">
    <input id="search" autocomplete="off" value="">
  </div>

  <main class="col-lg-12">
    <h3 id="heading">Anzahl an gefundenen Lokalen:</h3>
    <h3 id="noResult" class="hide">Leider kein passendes Lokal gefunden.<br />Diese könnten dir auch gefallen:</h3>
    <div id="stats"></div>
    <div id="hits" class="row"></div>
  </main>

  <!--Template für Ergebnisse-->
  <script type="text/html" id="hit-template">
    <section >
      <ul class="cards">
        <li class="cards__item ">
          <div class="card">
            <div class="card__image card__image--restaurant"></div>
            <div class="card__content">
              <h2 class="card-title">{% verbatim %}{{{name}}}{% endverbatim %}</h2>
              <p class="card__text">{% verbatim %}{{{description}}}{% endverbatim %}</p>
              <button class="btn btn--block card__btn">Mehr Infos hier!</button>
            </div>
          </div>
        </li>
      </ul>
      </section>
  </script>


  <!--Template für die Anzahl Ergebnisse-->
  <script type="text/html" id="stats-template">
      <div class="stats-content" id="contentstats">
        <h3 id="numberOfResults">{% verbatim %}{{nbHits}}{% endverbatim %}</h3>
      </div>
    </div>
  </script>

</section>